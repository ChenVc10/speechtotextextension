{
  "name": "speechtotextextension",
  "displayName": "speechToTextExtension",
  "description": "a vs code extension for speech-to-text",
  "version": "0.0.1",
  "publisher": "speech2code",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:speechtotextextension.showLogin",
    "onCommand:speechtotextextension.githubLogin",
    "onCommand:speechtotextextension.showSpeechUI"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "speechtotextextension.showLogin",
        "title": "Show Login"
      },
      {
        "command": "speechtotextextension.githubLogin",
        "title": "GitHub Login"
      },
      {
        "command": "speechtotextextension.showSpeechUI",
        "title": "Show Speech UI"
      },
      {
        "command": "speechtotextextension.startRecording",
        "title": "Start Recording"
      },
      {
        "command": "speechtotextextension.stopRecording",
        "title": "Stop Recording"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "mic": "^2.1.2",
    "ws": "^8.16.0"
  }
}